      <div class="page-content">
        <!-- Page Header-->
        <div class="page-header no-margin-bottom">
          <div class="container-fluid">
            <h2 class="h5 no-margin-bottom">User Manage</h2>
          </div>
        </div>
        <!-- Breadcrumb-->
        <div class="container-fluid">
          <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            <li class="breadcrumb-item active">Tables            </li>
          </ul>
        </div>
        <section class="no-padding-top">
          <div class="container-fluid">
            <div class="col-lg-12">
                <div class="block">
                  <div class="title"><strong>FLOURISH USER MANAGEMENT</strong></div>
                  <div class="table-responsive"> 
                    <table class="table table-striped table-hover">
                      <thead>
                        <tr>
                          <th>SI No:</th>
                          <th>User Name</th>
                          <th>Email</th>
                          <th>Phone</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(users.length){ for(i=0;i<users.length;i++){ %>
                        <tr>
                          <th scope="row"><%= i+1 %></th>
                          <td><%= users[i].name %></td>
                          <td><%= users[i].email %></td>
                          <td><%= users[i].phone %></td>
                          <% if (users[i].status) { %>
                            <td><a href="/admin/userStatus/<%= users[i]._id %>?status=<%= users[i].status %> "><button type="button" class="btn btn-outline-danger" style="width: 100px;">Block</button></a></td>
                        <% } else { %>
                            <td><a href="/admin/userStatus/<%= users[i]._id %>?status=<%= users[i].status %>"><button type="button" class="btn btn-outline-secondary" style="width: 100px;">Unblock</button></a></td>
                        <% } %>
                        
                        </tr>
                        

                        <%  }}  %> 


                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
          </div>
        </section>




             <!-- PAGINATION -->
             <div class="pagination-container">
              <nav aria-label="Page navigation example">
                  <ul class="pagination">
                      <% if (currentPage > 1) { %>
                          <li class="page-item">
                              <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                                  <span aria-hidden="true">&laquo;</span>
                                  <span class="sr-only">Previous</span>
                              </a>
                          </li>
                      <% } %>
                      <% for (let i = 1; i <= totalPages; i++) { %>
                          <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                          </li>
                      <% } %>
                      <% if (currentPage < totalPages) { %>
                          <li class="page-item">
                              <a class="page-link" href="?page=<%= parseInt(currentPage) + 1 %>" aria-label="Next">
                                  <span aria-hidden="true">&raquo;</span>
                                  <span class="sr-only">Next</span>
                              </a>
                          </li>
                      <% } %>
                  </ul>
              </nav>
          </div>
          
        
   

        



