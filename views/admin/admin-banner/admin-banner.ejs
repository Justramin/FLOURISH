      <div class="page-content">
        <!-- Page Header-->
        <div class="page-header no-margin-bottom">
          <div class="container-fluid">
            <h2 class="h5 no-margin-bottom">Banner Manage</h2>
          </div>
        </div>
        <!-- Breadcrumb-->
        <div class="container-fluid">
          <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            <li class="breadcrumb-item active">Banner</li>
          </ul>
        </div>
        <section class="no-padding-top">
          <div class="container-fluid">
            <div class="col-lg-12">
                <div class="block">
                  <div class="title"><strong>FLOURISH BANNER MANAGEMENT</strong></div>
                  <div class="table-responsive"> 
                    <table class="table table-striped table-hover">
                      <thead>
                        <tr>
                          <th>SI No:</th>
                          <th>Heading</th>
                          <th>Image</th>
                          <th>Discription</th>
                          <th>Status</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>


                        <% for( let i = 0; i < banner.length; i++ ) { %>
                          <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td><%= banner[i].bannerName %></td>
                            <td> <img src="/uploads/<%= banner[i].image %>" style="height: 50px;width: 50px;" alt="prdct img"> </td>
                            <td><%= banner[i].description %></td>
                            <% if (banner[i].status) { %>
                              <td><a href="/admin/bannerStatus/<%= banner[i]._id %>?status=<%= banner[i].status %> "><button type="button" class="btn btn-outline-danger" style="width: 100px;">UnList</button></a></td>
                          <% } else { %>
                              <td><a href="/admin/bannerStatus/<%= banner[i]._id %>?status=<%= banner[i].status %>"><button type="button" class="btn btn-outline-secondary" style="width: 100px;">List</button></a></td>
                          <% } %>
                          <td><a href="/admin/admin_editBanner/<%= banner[i]._id %>%>"><button type="button" class="btn btn-outline-info" style="width: 100px;">Edit</button></a></td>

                          </tr>
                        <% } %>
                        
                        
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
          </div>
        </section>







