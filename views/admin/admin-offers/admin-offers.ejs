      <div class="page-content">
        <!-- Page Header-->
        <div class="page-header no-margin-bottom">
          <div class="container-fluid">
            <h2 class="h5 no-margin-bottom">Offers Manage</h2>
          </div>
        </div>
        <!-- Breadcrumb-->
        <div class="container-fluid">
          <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            <li class="breadcrumb-item active">Tables            </li>
          </ul>
        </div>
        <section class="no-padding-top">
          <div class="container-fluid">
            <div class="col-lg-12">
                <div class="block">
                  <div class="title"><strong>FLOURISH OFFERS MANAGEMENT</strong></div>
                  <div class="table-responsive"> 
                    <table class="table table-striped table-hover">
                      <thead>
                        <tr>
                          <th>SI No:</th>
                          <th>Offer Name</th>
                          <th>Discription</th>
                          <th>Discount</th>
                          <th>Starting Date</th>
                          <th>Expiry Date</th>
                          <th>Status</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>



                        <% for( let i = 0; i < offers.length; i++ ) { %>
                        
                        


                            <tr>
                              <th scope="row"><%= i+1 %></th>
                              <td><%= offers[i].offerName %></td>
                              <td><%= offers[i].discription %></td>
                              <td><%= offers[i].discount %> %</td>
                              <td><%= offers[i].startingDate.toLocaleDateString() %></td>
                              <td><%= offers[i].endingDate.toLocaleDateString() %></td>
                              <% if (offers[i].status) { %>
                                <td><a href="/admin/offerStatus/<%= offers[i]._id %>?status=<%= offers[i].status %>"><button type="button" class="btn btn-outline-danger" style="width: 100px;">UnList</button></a></td>
                            <% } else { %>
                                <td><a href="/admin/offerStatus/<%= offers[i]._id %>?status=<%= offers[i].status %>"><button type="button" class="btn btn-outline-secondary" style="width: 100px;">List</button></a></td>
                            <% } %>
                            <td><a href="/admin/admin_editOffer/<%= offers[i]._id %>%>"><button type="button" class="btn btn-outline-info" style="width: 100px;">Edit</button></a></td>
    
                            </tr>
    
                            <% } %>
                        
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
              </div>
            </section>
            
    
    
         
                   




          
