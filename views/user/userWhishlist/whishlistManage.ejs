<!DOCTYPE html>
<html lang="en">
  
<%- include('../partials/head') %>

<body>
    <div class="header--sidebar"></div>



     <!--  Header-->

<%- include('../partials/navbar') %>
   
<div class="ps-hero bg--cover" data-background="/user/images/hero/bread-1.jpg">
	<div class="ps-container">
	  <h3>Shop Page</h3>
	  <div class="ps-breadcrumb">
		<ol class="breadcrumb">
		  <li><a href="index-2.html">Home</a></li>
		  <li class="active">USER ACCOUNT</li>
		  <li class="active">Your Address</li>
		</ol>
	  </div>
	</div>
  </div> 

  <% if (whishlislData) { %>
    <section class="cart_area" style="height: auto;">
        <div class="container">
            <div class="cart_inner">
                <div class="table-responsive" style="height: auto;">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Product Image</th>
                                <th scope="col">Product</th>
                                <th scope="col">Price</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Add To Cart</th>
                            </tr>
                        </thead>
                        

                   

                        <tbody>
                            <% for( let i = 0; i < whishlislData.items.length; i++ ) { %>
                                <tr>
                                    <td>
                                        <div class="media">
                                            <div class="d-flex">
                                                <img src="/uploads/<%= whishlislData.items[i].Image %>" alt="Image" style="height: 80px; width: 80px;">
                                            </div>
                                            
                                        </div>
                                    </td>
                                    <td>
                                        <h5><%= whishlislData.items[i].product  %></h5>
                                    </td>
                                    <td>
                                        <h5><%= whishlislData.items[i].Price %></h5>
                                    </td>
                                    
                                    <td>
                                        <a href="/wishlistRemove?wishId=<%= whishlislData.items[i]._id %>" class="btn btn-danger">Remove</a>
                                    </td>
                                    <td>
                                        <a href="/addCart?proId=<%= whishlislData.items[i].proId %>" class="btn btn-success">Add</a>
                                    </td>
                                </tr>
                            <% } %>

                        </tbody>




                    </table>
                </div>
            </div>
        </div>
    </section>
    
    <% } else { %>
        <p class="p-4 bg-dark text-light"> no product added in the whishlist.</p>         
    <% } %>


    
   

    <%- include('../partials/footer')  %>


</body>

</html>
